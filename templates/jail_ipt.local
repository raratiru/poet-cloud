[DEFAULT]
bantime = 172800
findtime=3600
maxretry = 3
usedns = no
ignoreip = 127.0.0.1/8 ::1 {{ ansible_facts.default_ipv4.address }} {% if 'address' in ansible_facts.default_ipv6 %}{{ ansible_facts.default_ipv6.address }}{% endif %}

[ssh]
enabled = true
maxretry = 3
filter = sshd
logpath = /var/log/auth.log
