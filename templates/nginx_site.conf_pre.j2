#
# Ansible managed
#

upstream frontend_servers {
  least_conn;
  zone frontend 64k;
  server 127.0.0.1:{{ nginx_proxy_server_port | default("8001") }} weight=1 fail_timeout=0s;
}

{% if server_alias_domain_name is defined and server_alias_domain_name %}
# Redirect any alias to server_domain_name
server {
  listen 80;
  listen [::]:80;

  server_name {{ server_alias_domain_name }};
  root /usr/share/nginx/html;

  location ~ /\.well-known/acme-challenge/ {
    default_type "text/plain";
    try_files $uri =404;
    break;
  }

  location / {
    return 301 http://{{ server_domain_name }}$request_uri;
  }
}
{% endif %}

server {
  listen 80 deferred;
  listen [::]:80 deferred;

  server_name {{ server_domain_name }};
  root {{ ansible_facts["user_dir"] }}/00_server/{{ server_domain_name }}/www;

  location ~ /\.well-known/acme-challenge/ {
    root /usr/share/nginx/html;
    default_type "text/plain";
    try_files $uri =404;
    break;
  }

  if (-f $document_root/maintenance.html) {
    return 503;
  }

  location ~ "^/sitemap(-[0-9]+)?.xml" {
  	try_files $uri $uri/ =404;
  }

  location / {
    {% if nginx_use_proxy_cache is defined and nginx_use_proxy_cache %}
    proxy_cache {{ server_domain_name }}_cache;
    proxy_cache_lock on;
    {% if nginx_cache_background_update is defined and nginx_cache_background_update %}
    proxy_cache_use_stale error timeout updating http_500 http_502
                          http_503 http_504;
    proxy_cache_background_update on;
    {% endif %}
    {% if nginx_cache_revalidate_with_conditional_headers is defined and nginx_cache_revalidate_with_conditional_headers %}
    proxy_cache_revalidate on;
    {% endif %}
    {% endif %}
    proxy_hide_header X-Powered-By;
    proxy_pass http://frontend_servers;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $http_host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_redirect off;
    proxy_buffering on;
    proxy_read_timeout 3600s;
  }

  # Redirect everything to maintenance.html
  error_page 503 @maintenance;
  location @maintenance {
    rewrite ^(.*)$ /maintenance.html break;
  }

  # redirect server error pages to the static page /50x.html
  #
  error_page   500 502 504  /50x.html;
  location = /50x.html {
    root   /usr/share/nginx/html;
  }
}
